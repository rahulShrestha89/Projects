<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
 
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Josefin+Slab">
    <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>

    

</head>
<body>
    
  
        <div class="masthead">

        <div class="info-bar">
            <div class="logo"><h1><a>@Html.ActionLink("CRUX", "Index", "Home")</a></h1></div>
            <div class="navigation">
                <ul>
                    
                    <li>@Html.ActionLink("Overview", "Overview", "Home")</li>
                    <li>@Html.ActionLink("Institutions", "Institution", "Home")</li>
                    
                    <li id="navcontent"> ||</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(HttpContext.Current.User.Identity.Name, "Index", "Home")</li>
                        <li>@Html.ActionLink("Sign Out", "Logout", "Student")</li>
                    }
                    else{
                        <li>@Html.ActionLink("Sign In", "Login", "Student")</li>
                        <li>@Html.ActionLink("Register", "Create", "Student")</li>
                   }
                </ul>
            </div>
           
            <div class="navbar-form navbar-left" role="search" style="padding-left:35px;">
                <p>
                    @using (Html.BeginForm("Index", "Hashtags", FormMethod.Get))
                    {
                    <p>
                        <div class="form-group">
                            @Html.TextBox("SearchString")
                            <input type="submit" class="btn btn-default" />
                        </div>
                    </p>
                    }
                    </p>

                </div>

                </div>
    </div>
    <div class="container body-content" style=" padding-left: 0px; padding-right: 0px;">
        @RenderBody()
        

        <footer style=" padding-top: 0px;  padding-bottom: 0px; background-color:#026ab3; ">

            <div class=" container">
            <div class="asides clearfix">
                <aside>
                    <nav>
                        <ul >
                            <li style="color:white;">@Html.ActionLink("Subscribe", "Subscribe", "Home")</li>
                            <li style="color:white;">@Html.ActionLink("Privacy", "Privacy", "Home")</li>
                            
                        
                            <li style="color:white;">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </aside>
                


            </div>
            <div class="copyright">
                <small>
                    &copy; @DateTime.Now.Year , Team: The Usual Suspects. All rights reserved<br><a href="google.com">Project Crux</a>
                </small>
            </div>
</div>
        </footer><!-- /footer -->

    </div><!-- /#wrapper -->
    

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
