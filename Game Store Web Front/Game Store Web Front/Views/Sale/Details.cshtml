@model Game_Store_Web_Front.Models.GetCartDTO

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cart</h4>
    <hr />

        <table class="table">
            <tr>
                <td>
                    Game Name
                </td>
                <td>
                    Price
                </td>
                <td>
                    Inventory Count
                </td>
            </tr>
            @foreach (var game in Model.Games)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => game.Item1.GameName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => game.Item1.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => game.Item1.InventoryStock)
                    </td>
                </tr>

            }

        </table>

   
</div>
<p>
    @Html.ActionLink("Checkout", "Sale", new { id = Model.User_Id }) |
    @Html.ActionLink("Cancel", "Index")
</p>
